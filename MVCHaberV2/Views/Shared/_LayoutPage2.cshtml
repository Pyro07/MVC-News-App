<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        #ortaAlan{
            padding:10px;
            padding-bottom:50px;
        }

        #footer {
            background-color: #f5f5f5;
            /*position:relative;
            margin-top:-25px;
            height:25px;
            clear:both;*/
            position:fixed;
            bottom:0px;
            left:0px;
            width:100%;
            height:50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @*<div class="container">*@
        <div class="collapse navbar-collapse">
            <a class="navbar-brand" href="#">Kontrol Paneli</a>
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @*<a class="nav-link" href="@Html.ActionLink("Haber Listesi","Index","AddNews")"></a>*@
                    <a class="nav-link" href="@Url.Action("Index","AddNews")">Haber Listesi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("KategoriEkle","AddNews")">Kategori Ekle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("HaberEkle","AddNews")">Yeni Haber Ekle</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto nav-flex-icons">
                <li class="nav-item avatar dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-55" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/image/user.jpg" class="rounded-circle z-depth-0" alt="avatar image" />
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-55">
                        <a class="dropdown-item" href="@Url.Action("LogOut","AdminLogin")">Çıkış Yap</a>
                        @*@Html.ActionLink("Çıkış Yap", "LogOut", "AdminLogin", null, new { @class = "dropdown-item" })*@
                    </div>
                </li>
            </ul>
        </div>
        @*</div>*@
    </nav>
    <div id="ortaAlan">
        <div>
            @RenderBody()
        </div>
    </div>
   
    <footer class="footer" id="footer">
        <div class="container text-center">
            <p class="text-muted">Designed by Burak Başeskioğlu © 2019</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

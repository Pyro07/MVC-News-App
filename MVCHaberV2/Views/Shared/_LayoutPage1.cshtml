@using MVCHaberV2.Models
@model IndexModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <style type="text/css">
        #ortaAlan {
            padding: 10px;
            padding-bottom: 50px;
        }

        #footer {
            background-color: #f5f5f5;
            position: fixed;
            bottom: 0px;
            left: 0px;
            width: 100%;
            height: 50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="collapse navbar-collapse">
            <div class="navbar-header">
                <a class="navbar-brand" style="color:white">Haberler</a>
            </div>

            <ul class="nav navbar-nav">
                @*<li class="nav-link">@Html.ActionLink("Anasayfa", "Index", "Home")</li>*@
                <li><a class="nav-link active" href="@Url.Action("Index","Home")">Anasayfa</a></li>

                @foreach (var item in Model.IMKategoriler)
                {
                    @*<ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Anasayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Gundem","Home")">Gündem</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Spor","Home")">Spor</a>
                            </li>
                        </ul>*@
                <li class="nav-item">
                    @*<a class="nav-link" href="/Home/@item.KategoriAdi">@item.KategoriAdi</a>*@
                    <a class="nav-link" href="@Url.Action(item.KategoriAdi,"Home")">@item.KategoriAdi</a>
                </li>
                }
            </ul>

        </div>
    </nav>

    <div id="ortaAlan">
        @RenderBody()
    </div>

    <footer class="footer" id="footer">
        <div class="container text-center">
            <p class="text-muted">Designed by Burak Başeskioğlu © 2019</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
